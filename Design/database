create table role
(
  role_id int auto_increment,
  user_id int         not null,
  email   varchar(50) not null,
  role    varchar(20) not null,
  constraint role_email_uindex
    unique (email),
  constraint role_role_id_uindex
    unique (role_id),
  constraint role_user_id_uindex
    unique (user_id),
  constraint role_user_user_id_fk
    foreign key (user_id) references user (user_id)
);

alter table role
  add primary key (role_id);

 create table user
 (
   user_id    int auto_increment,
   email      varchar(50) not null,
   password   varchar(50) not null,
   first_name varchar(25) not null,
   last_name  varchar(40) null,
   constraint user_email_uindex
     unique (email),
   constraint user_user_id_uindex
     unique (user_id)
 );

 alter table user
   add primary key (user_id);

   create table user_asset
   (
     user_asset_id int auto_increment,
     user_id       int            not null,
     buy_price     decimal(13, 4) not null,
     sell_price    decimal(13, 4) null,
     buy_date      date           not null,
     sell_date     date           null,
     qty           int            not null,
     asset_name    varchar(20)    not null,
     asset_id      int            not null,
     constraint user_asset_user_asset_id_uindex
       unique (user_asset_id),
     constraint user_id
       foreign key (user_id) references user (user_id)
   );

   alter table user_asset
     add primary key (user_asset_id);